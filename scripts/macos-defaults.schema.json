{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "required": ["defaults"],
  "additionalProperties": false,
  "properties": {
    "$schema": { "type": "string" },
    "defaults": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["domain", "key", "type", "value", "description", "category"],
        "additionalProperties": false,
        "properties": {
          "domain": { "type": "string" },
          "key": { "type": "string" },
          "type": { "type": "string", "enum": ["bool", "int", "float", "string"] },
          "value": {},
          "description": { "type": "string" },
          "category": {
            "type": "string",
            "enum": ["dock", "finder", "keyboard", "trackpad", "global", "window-manager", "menu-bar"]
          },
          "restart": { "type": "string" }
        }
      }
    }
  }
}
