{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "required": ["links"],
  "additionalProperties": false,
  "properties": {
    "$schema": { "type": "string" },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["key", "description"],
        "additionalProperties": false,
        "properties": {
          "key": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    }
  }
}
